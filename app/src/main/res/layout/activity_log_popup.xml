<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">

    <!-- 타이틀바 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarmlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70A9FF"
            android:gravity="center"
            android:text="약품 검색 기록 (상세)"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="검색 날짜"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/date"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffff"
            android:text="yyyy-mm-dd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#000000"
            android:text="복용 완료" />

        <TextView
            android:id="@+id/due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffff"
            android:textColor="@color/colorPrimaryDark"
            android:text="yyyy-mm-dd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#000000"
            android:text=" 순서번호 " />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:background="#ffff"
            android:text="n" />

        <TextView
            android:id="@+id/tvtaking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#000000"
            android:text=" 복용여부 " />

        <TextView
            android:id="@+id/taking"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:background="#ffff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="복용중/복용끝" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="match_parent"
        android:background = "@color/common"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="205dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="185dp"
            tools:srcCompat="@drawable/sampledrugimg" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="검색된 약품 목록" />

    <TextView
        android:id="@+id/pills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:textColor="@color/colorPrimaryDark"
        android:text="\n여기에 의약품 목록이 표시됩니다\n" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="주의 사항" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:text="\n주의 사항 없음\n" />

    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:gravity="center"
            android:onClick="close"
            android:padding="16dp"
            android:text="닫기"
            android:background="#ff7a00"
            android:textSize="15sp" />


    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>

